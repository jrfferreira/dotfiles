#	tray_output primary
	tray_output eDP1

	bindsym button4 nop
	bindsym button5 nop
#   font xft:URWGothic-Book 11
	strip_workspace_numbers yes

    colors {
        background  #141414
        statusline  #dddddd
        separator   #666666
	
      # class               border  backgr. text 
        focused_workspace   #dddddd #dddddd #212121
        active_workspace    #212121 #212121 #ffffff
        inactive_workspace  #141414 #141414 #86888c
        urgent_workspace    #ff6c6b #ff6c6b #ffffff
        binding_mode        #98be65 #98be65 #ffffff
    }
}

