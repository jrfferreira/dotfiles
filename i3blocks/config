signal=10
LONG_FORMAT="${SYMB}${VOL}%"
SHORT_FORMAT="${SYMB}${VOL}%"
DEFAULT_COLOR="#f3f4f5"
USE_ALSA_NAME=1

[cpu_usage2]
command=~/.local/src/i3blocks-contrib/cpu_usage2/cpu_usage2
markup=pango
interval=persist

[ram]
